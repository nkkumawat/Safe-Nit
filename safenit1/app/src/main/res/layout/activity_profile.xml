<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    tools:context="com.example.sonu.safenit1.profile">

    <Button
        android:id="@+id/uploadpro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/outline"
        android:text="Upload "
        android:textColor="@color/btn_login_bg"
        android:layout_below="@+id/pickAImagepro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <ImageView
        android:id="@+id/pickAImagepro"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="65dp"
        android:adjustViewBounds="true"
        android:background="@drawable/outline"
        android:padding="5dp"
        app:srcCompat="@drawable/avatar" />

    <ImageButton
        android:id="@+id/choosepic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/pickAImagepro"
        android:layout_alignEnd="@+id/pickAImagepro"
        android:background="@drawable/outline"
        app:srcCompat="@android:drawable/ic_menu_add" />

</RelativeLayout>
