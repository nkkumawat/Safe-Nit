<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:layout_marginRight="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/uploadedimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:baselineAlignBottom="false"
                android:clickable="false"
                android:cropToPadding="true"
                android:src="@drawable/avatar" />
        </RelativeLayout>

        <TextView
            android:id="@+id/Titleshow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DiscriptionShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Discription"
            android:textColor="@color/input_register" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.40">

            <ImageView
                android:id="@+id/likebtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                app:srcCompat="@drawable/like" />

            <TextView
                android:id="@+id/uploaderName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/likecount1"
                android:layout_alignBottom="@+id/likecount1"
                android:layout_marginLeft="20dp"
                android:layout_toStartOf="@+id/profilePics"
                android:gravity="right"
                android:paddingRight="4dp"
                android:textColor="@color/input_register"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/profilePics"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="270dp"
                app:srcCompat="@drawable/avatar" />

            <TextView
                android:id="@+id/likecount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/likebtn"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="7dp"
                android:text="0" />

            <ImageView
                android:id="@+id/doneornot"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/likecount1"
                app:srcCompat="@drawable/donesingle" />

            <ImageView
                android:id="@+id/download"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/doneornot"
                app:srcCompat="@drawable/download" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>