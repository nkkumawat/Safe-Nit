<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:layout_marginRight="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/uploadedimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/outline" />

        <TextView
            android:id="@+id/Titleshow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DiscriptionShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Discription"
            android:textColor="@color/input_register" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.40">

            <ImageView
                android:id="@+id/likebtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                app:srcCompat="@drawable/like" />

            <TextView
                android:id="@+id/uploaderName"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/profilePics"
                android:layout_centerVertical="true"
                android:layout_marginEnd="32dp"
                android:layout_marginLeft="0dp"
                android:layout_toEndOf="@+id/likebtn"
                android:gravity="right"
                android:textColor="@color/input_register"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/profilePics"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="270dp"
                app:srcCompat="@drawable/avatar"
                android:layout_marginEnd="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/likecount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/likebtn"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="7dp"
                android:text="0" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>