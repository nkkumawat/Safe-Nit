<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context="com.example.sonu.safenit1.home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/downloaded1"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_above="@+id/title11"
                android:layout_alignParentStart="true"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                app:srcCompat="@drawable/avatar" />

            <EditText
                android:id="@+id/title11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/download2"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="0dp"
                android:layout_marginTop="30dp"
                android:background="@color/bg_main"
                android:ems="10"
                android:hint="title"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/btn_login_bg"
                android:textColorHint="@color/btn_login_bg" />

            <EditText
                android:id="@+id/disc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignEnd="@+id/title11"
                android:layout_below="@+id/title11"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/download2"
                android:background="@color/bg_main"
                android:ems="10"
                android:gravity="top"
                android:hint="disc"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textAlignment="gravity"
                android:textColor="@color/btn_login_bg"
                android:textColorHint="@color/btn_login_bg" />

            <ImageButton
                android:id="@+id/download2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/rotateimage1"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="230dp"
                android:background="@color/bg_main"
                app:srcCompat="@android:drawable/ic_menu_add" />

            <Button
                android:id="@+id/upload"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@+id/disc"
                android:layout_centerHorizontal="true"
                android:background="@color/bg_main"
                android:text="Upload"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
